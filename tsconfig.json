{
    "extends": "@tsconfig/node12/tsconfig.json",
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "target": "es2019",
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./dist/",
        "skipLibCheck": true,
        "lib": [
            "DOM"
        ]
    },
    "exclude": [
        "./server "
    ],
    "include": [
        "./client/*"
    ]
}